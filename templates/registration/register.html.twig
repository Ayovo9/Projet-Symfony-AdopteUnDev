{% extends 'base.html.twig' %}

{% block title %}Inscription - AdopteUnDev{% endblock %}

{% block body %}
<div class="position-fixed top-0 end-0 p-4">
    <a href="{{ path('app_home') }}" class="btn btn-outline-primary rounded-circle">
        <i class="fas fa-home fs-4"></i>
    </a>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h1 class="h3 mb-4 text-center">Inscription</h1>

                    {{ form_start(registrationForm) }}
                    <div class="mb-4">
                        {{ form_row(registrationForm.email) }}
                    </div>

                    <div class="mb-4">
                        {{ form_row(registrationForm.username) }}
                    </div>

                    <div class="mb-4">
                        {{ form_row(registrationForm.plainPassword) }}
                    </div>

                    <div class="mb-4">
                        {{ form_row(registrationForm.role) }}
                    </div>

                    <div class="mb-4 form-check">
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">S'inscrire</button>
                    </div>
                    {{ form_end(registrationForm) }}

                    <div class="text-center mt-4">
                        <p class="mb-0">Déjà un compte ?</p>
                        <a href="{{ path('app_login') }}" class="text-decoration-none">Se connecter</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
