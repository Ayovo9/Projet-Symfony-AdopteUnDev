{% extends 'base.html.twig' %}

{% block title %}Modifier le profil entreprise{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .edit-form-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
            background-color: #fff;
            border-radius: 1rem;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }
        .form-section {
            margin-bottom: 2rem;
            padding: 1.5rem;
            background-color: #f8f9fa;
            border-radius: 0.5rem;
        }
        .form-section h3 {
            color: #333;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #007bff;
            display: inline-block;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="edit-form-container">
        <h1 class="text-center mb-4">Modifier le profil entreprise</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            
            {# Informations de base #}
            <div class="form-section">
                <h3>Informations de base</h3>
                <div class="mb-4">
                    {{ form_row(form.name) }}
                </div>
                <div class="mb-4">
                    {{ form_row(form.industry) }}
                </div>
            </div>

            {# Description #}
            <div class="form-section">
                <h3>Présentation</h3>
                <div class="mb-3">
                    {{ form_row(form.description) }}
                    <small class="text-muted">
                        Décrivez votre entreprise, vos valeurs et votre culture d'entreprise pour attirer les meilleurs talents.
                    </small>
                </div>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-save me-2"></i>Enregistrer les modifications
                </button>
                <a href="{{ path('app_company_profile') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour au profil
                </a>
            </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
